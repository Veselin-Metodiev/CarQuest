@using CarQuest.Web.ViewModels.Car
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<CarAllViewModel>
@{
	ViewData["Title"] = "Your Cars";
}

<h1>@ViewData["Title"]</h1>
@if (!Model.Any())
{
	<p>No cars added yet.</p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Brand</th>
				<th>Model</th>
				<th>Year</th>
				<th>Mileage</th>
			</tr>
		</thead>
		<tbody>
			@foreach (CarAllViewModel car in Model)
			{
				<tr>
					<td>@car.Brand</td>
					<td>@car.Model</td>
					<td>@car.Year</td>
					<td>@car.Mileage</td>
					<td>
						<a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id">Edit</a> |
						<a asp-controller="Car" asp-action="Remove" asp-route-id="@car.Id">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}