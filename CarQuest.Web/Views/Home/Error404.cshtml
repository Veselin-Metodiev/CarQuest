@{
    ViewData["Title"] = "Page Not Found";
}

<h1 class="error-title">404</h1>
<h2 class="error-subtitle">Page Not Found</h2>
<p class="error-description">The page you're looking for does not exist.</p>

<img src="https://img.freepik.com/free-vector/oops-404-error-with-broken-robot-concept-illustration_114360-5529.jpg?w=2000" alt="Error Image" class="error-image">

<a asp-page="Index" class="btn btn-primary">Go to Home</a>

<style>
    .error-title {
        font-size: 5rem;
        color: #f56c42;
    }

    .error-subtitle {
        font-size: 2rem;
        color: #333;
    }

    .error-description {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .error-image {
        max-width: 100%;
        margin-top: 2rem;
    }
</style>