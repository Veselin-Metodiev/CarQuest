@using CarQuest.Web.ViewModels.Car
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model 			CarQuest.Web.ViewModels.TicketUser.TicketUserAddViewModel
@{
	ViewData["Title"] = "Add Ticket";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="Add" method="post">
	<div>
		<label asp-for="Title">Title:</label>
		<input asp-for="Title" class="form-control" required>
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="Description">Description:</label>
		<textarea asp-for="Description" class="form-control" rows="3" required></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div>
		<label asp-for="CarId">Select Car:</label>
		<select asp-for="CarId" class="form-control" required>
			<option value="">-- Select Car --</option>
			@foreach (CarAllViewModel car in Model.Cars)
			{
				<option value="@car.Id">@car.Brand @car.Model @car.Year</option>
			}
		</select>
		<span asp-validation-for="CarId" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}